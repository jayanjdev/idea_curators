<p id="notice"><%= notice %></p>

<p>
  <strong>Subject:</strong>
  <%= @lead.subject %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @lead.tags %>
</p>

<p>
  <strong>Source:</strong>
  <%= @lead.source %>
</p>

<p>
  <strong>Owner:</strong>
  <%= link_to @lead.user.name, profile_path(@lead.user.profile)%>
</p>


<p>
  <strong>Details:</strong>
  <%= @lead.details %>
</p>
      
<% if current_user == @lead.user  %>
<%= link_to 'Edit', edit_lead_path(@lead) %> |
<% end %>
<%= link_to 'Back', leads_path %>

<ul class='c-comments-list'>
  <% @lead.comments.each do |comment| %>
    <%= render :partial => 'partial/comment', locals: { comment: comment } %>
  <% end %>
</ul>

<div class='js-add-a-comment'>
  <div class-'js-new-comment'>
  </div>
</div>

<%= link_to 'Add a comment', new_comment_path(commentable_type: @lead.class.to_s,
commentable_id: @lead.id) %>
